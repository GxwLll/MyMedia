<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <include
            android:id="@+id/background_title"
            layout="@layout/hf_base_activity_title" />

        <LinearLayout
            android:id="@+id/hf_base_lin_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/background_title"
            android:background="@color/app_bg_f0f0f0"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hf_base_back_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8f000000"
            android:visibility="gone" >
        </RelativeLayout>

</RelativeLayout>